{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["OPENAI_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!.next/cache/**"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["OPENAI_API_KEY", "GEMINI_API_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "test": {},
    "clean": {
      "cache": false
    }
  }
}
